{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "exclude": ["node_modules", "scripts", "babel.config.js", "jest.config.js"],
  "include": ["src", "index.ts", "package.json", "__mocks__"]
}
